<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/spacing_10dp" />
            <stroke android:width="2dp" android:color="@color/background_red_medium" />
            <solid android:color="@color/background_red_medium" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/spacing_10dp" />
            <stroke android:width="1dp" android:color="@color/background_red_medium" />
            <solid android:color="@color/background_red_medium" />
        </shape>
    </item>
</selector>